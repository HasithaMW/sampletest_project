<tiles-definitions>
	<definition name="defaultTemplate" template="/WEB-INF/jsp/template/template.jsp">
		<put-attribute name="header" 	value="/WEB-INF/jsp/template/defaultHeader.jsp" />
		<put-attribute name="leftMenu" value="/WEB-INF/jsp/template/defaultLeftMenue.jsp" />
		<put-attribute name="body" 		value="/WEB-INF/jsp/template/defaultContent.jsp" />
		<put-attribute name="footer" 	value="/WEB-INF/jsp/template/defaultFooter.jsp" />
	</definition>
	
	<definition name="subTemplate" template="/WEB-INF/jsp/template/SubTemplate.jsp">
	<put-attribute name="header" 	value="/WEB-INF/jsp/template/defaultHeader.jsp" />
		<put-attribute name="mainContent" 	value="/WEB-INF/jsp/template/defaultHeader.jsp" />
		<put-attribute name="leftMenu" value="/WEB-INF/jsp/template/defaultLeftMenue.jsp" />
		<put-attribute name="body" 		value="/WEB-INF/jsp/template/defaultContent.jsp" />
		<put-attribute name="footer" 	value="/WEB-INF/jsp/template/defaultFooter.jsp" />
	</definition>
